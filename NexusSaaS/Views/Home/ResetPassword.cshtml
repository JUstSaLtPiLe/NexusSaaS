@model NexusSaaS.Models.ResetPasswordModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reset Password</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Login" asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Token" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">New Password</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Reset Password" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@if (TempData["resetStatus"] != null)
{
    <script>
            alert("@TempData["resetStatus"]");
    </script>
}

